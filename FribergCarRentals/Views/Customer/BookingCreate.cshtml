@model FribergCarRentals.Models.Booking

@{
    ViewData["Title"] = "BookingCreate";
}

<h1>Create booking</h1>

<h4>Booking details</h4>
<hr />
<div class="row">
    <div>
        <span>
             Vehicle: @Html.DisplayFor(model => model.Vehicle.Brand) @Html.DisplayFor(model => model.Vehicle.Model)
            </span>
    </div>
    <div>
        <span>
            Customer: @Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.LastName)
        </span>
    </div>
    <br />
    <div class="col-md-4">
        
        <form asp-action="BookingCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingStart" class="control-label"></label>
                <input asp-for="BookingStart" min="@DateTime.Now.ToString(" yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="BookingStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingEnd" class="control-label"></label>
                <input asp-for="BookingEnd" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="BookingEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="VehicleId" value="@Model.Vehicle.VehicleId" />
                <input type="hidden" asp-for="CustomerId" value="@Model.Customer.CustomerId" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="VehicleOverview" asp-controller="Customer">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
